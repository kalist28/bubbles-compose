{
  "initialVersion": "0.1.0",
  "preset": "extended",
  "scheme": "SEMVER",
  "verbosity": "INFO",
  "releaseLenient": true,

  "tagVersionPattern": "v{{version}}",

  "commitMessageConventions": {
    "enabled": [
      "conventionalCommits",
      "conventionalCommitsForMerge"
    ]
  },

  "releaseTypes": {
    "enabled": ["stable", "beta", "rc"],
    "items": {
      "stable": {
        "matchBranches": "^(main|master)$",
        "gitTag": "true"
      },
      "beta": {
        "matchBranches": "^develop$",
        "gitTag": "true",
        "identifiers": [
          { "position": "PRE_RELEASE", "qualifier": "beta" }
        ]
      },
      "rc": {
        "matchBranches": "^release\\/.*$",
        "gitTag": "true",
        "identifiers": [
          { "position": "PRE_RELEASE", "qualifier": "rc" }
        ]
      }
    }
  }
}